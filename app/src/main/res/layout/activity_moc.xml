<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/activity_moc"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:background="@color/colorPrimaryDark"
        tools:context="com.example.thienpham.time_remider.MocAcitivty">

    <TextView
            android:text="Mốc"
            android:textColor="@color/colorPrimary"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" android:id="@+id/textView5"/>
    <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/spinner"
            android:entries="@array/color"
            android:layout_marginBottom="16dp" android:layout_above="@+id/etmocNote"
            android:layout_centerHorizontal="true"/>
    <EditText
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:inputType="textPersonName"
            android:hint="Nội dung"
            android:textColorHint="@color/colorPrimary"
            android:gravity="center"
            android:ems="10"
            android:textColor="@color/colorWhite"
            android:id="@+id/etmocNote"
            android:layout_alignParentBottom="true" android:layout_alignParentLeft="true"
            android:layout_marginBottom="50dp"
            android:layout_alignParentStart="true" android:contentDescription="Nhập nội dung sự kiện"/>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="50dp" android:layout_alignParentBottom="true" android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">
        <Button
                android:text="Thêm mốc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/btmocConfirm" android:layout_weight="1"/>
        <Button
                android:text="Xóa mốc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/btmocCancel" android:layout_weight="1"/>
    </LinearLayout>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="1"
            android:layout_below="@+id/textView5" android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <Button
                    android:hint="Giờ bắt đầu"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:id="@+id/btmocTimestart"
                    android:textSize="17dp"
                    android:layout_weight="1"/>
            <Button
                    android:hint="Giờ kết thúc"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:textSize="17dp"
                    android:id="@+id/btmocTimeend"
                    android:layout_weight="1"/>
        </LinearLayout>
        <Button
                android:hint="Ngày chọn"
                android:layout_width="match_parent"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_height="70dp"
                android:textSize="25dp"
                android:id="@+id/btmocDayselect"
                android:layout_marginTop="10dp"/>
    </LinearLayout>

</RelativeLayout>
