<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/activity_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        tools:context="com.example.thienpham.time_remider.MainActivity" android:background="@android:color/holo_blue_light">

    <TextView
            android:text="TIME REMINDER"
            android:textSize="30dp"
            android:layout_marginTop="100dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvName"
            android:layout_weight="1"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"/>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:layout_below="@+id/tvName"
            android:layout_centerHorizontal="true"
            android:id="@+id/infoLogin">
        <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:layout_gravity="center"
                android:textSize="23dp"
                android:id="@+id/etUserLogin"
                android:layout_weight="1"
                android:hint="UserID"
                android:background="@android:color/background_light"/>
        <EditText
                android:layout_width="wrap_content"
                android:inputType="textPassword"
                android:layout_marginTop="15dp"
                android:ems="10"
                android:layout_gravity="center"
                android:textSize="23dp"
                android:id="@+id/etPassLogin"
                android:layout_weight="1"
                android:hint="Password"
                android:background="@android:color/background_light"
                android:layout_height="wrap_content"/>
        <CheckBox
                android:text="Remember ID?"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="35dp"
                android:textSize="15dp"
                android:id="@+id/cbRememberLogin"
                android:layout_weight="1"/>
        <Button
                android:text="ĐĂNG NHẬP"
                android:layout_height="wrap_content"
                android:id="@+id/button"
                android:layout_weight="1"
                android:layout_marginTop="15dp"
                android:layout_below="@+id/cbRememberLogin"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"
                android:layout_width="250dp"/>
        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/tvSignupLogin"
                android:layout_weight="1"
                android:layout_marginTop="15dp"
                android:layout_gravity="center"
                android:text="Chưa có tài khoản? Đăng ký"
                android:textAlignment="center" android:textStyle="normal|bold"/>
    </LinearLayout>
</RelativeLayout>
