<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:gravity="center"
        android:background="@android:color/holo_blue_dark"
>
    <LinearLayout
            android:id="@+id/layout1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginRight="0dp"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="0dp"

    >

        <EditText
                android:id="@+id/etNameLT"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1.63"
                android:layout_marginTop="0dp"
                android:layout_marginLeft="45dp"
                android:layout_marginRight="45dp"
                android:gravity="center"
                android:hint="TÊN LỊCH TRÌNH"
                android:textSize="15dp"
                android:textStyle="italic"
                android:textAlignment="center"
                android:textColorHint="#ececec"
        />

        <LinearLayout
                android:id="@+id/layout2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="0dp"
        >

            <LinearLayout
                    android:id="@+id/layout2_1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_weight="1"
            >
                <Button
                        android:id="@+id/btDaystart"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:inputType="date"
                        android:hint="Ngày bắt đầu"
                        android:textAlignment="center"
                        android:textStyle="bold"
                        android:textSize="15sp"
                />

                <Button
                        android:id="@+id/btDayend"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:inputType="date"
                        android:hint="Ngày kết thúc"
                        android:textAlignment="center"
                        android:textStyle="bold"
                        android:textSize="15sp"
                />
            </LinearLayout>

            <LinearLayout
                    android:id="@+id/layout2_2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_weight="1"
            >
                <Button
                        android:id="@+id/btTimestart"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:inputType="time"
                        android:hint="Giờ bắt đầu"
                        android:textAlignment="center"
                        android:textStyle="bold"
                        android:textSize="15sp"
                />

                <Button
                        android:id="@+id/btTimeend"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:inputType="time"
                        android:hint="Giờ kết thúc"
                        android:textAlignment="center"
                        android:textStyle="bold"
                        android:textSize="15sp"
                />
            </LinearLayout>

            <LinearLayout
                    android:id="@+id/layout2_3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_marginLeft="0dp"
                    android:layout_marginRight="0dp"
                    android:layout_weight="1.1"
            >
                <CheckBox
                        android:id="@+id/cbT2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:text="T2"
                        android:textSize="11sp"
                        android:textAlignment="center"
                        android:textStyle="normal"
                />

                <CheckBox
                        android:id="@+id/cbT3"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:text="T3"
                        android:textSize="11sp"
                        android:textAlignment="center"
                        android:textStyle="normal"
                />

                <CheckBox
                        android:id="@+id/cbT4"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:text="T4"
                        android:textSize="11sp"
                        android:textAlignment="center"
                        android:textStyle="normal"
                />

                <CheckBox
                        android:id="@+id/cbT5"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:text="T5"
                        android:textSize="11sp"
                        android:textAlignment="center"
                        android:textStyle="normal"
                />

                <CheckBox
                        android:id="@+id/cbT6"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:text="T6"
                        android:textSize="11sp"
                        android:textAlignment="center"
                        android:textStyle="normal"
                />

                <CheckBox
                        android:id="@+id/cbT7"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:text="T7"
                        android:textSize="11sp"
                        android:textAlignment="center"
                        android:textStyle="normal"
                />

                <CheckBox
                        android:id="@+id/cbCN"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:text="CN"
                        android:textSize="11sp"
                        android:textAlignment="center"
                        android:textStyle="normal"
                />
            </LinearLayout>

            <LinearLayout
                    android:id="@+id/layout2_4"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_weight="1.15"
                    android:layout_marginStart="30dp"
                    android:layout_marginEnd="30dp"
            >

                <CheckBox
                        android:id="@+id/cbMoingay"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="Mỗi ngày"
                />

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
                android:id="@+id/layout"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
        >
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="2.5"
            >
                <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                >
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Màu nền"
                            android:textAlignment="center"
                            android:gravity="center"
                            android:layout_gravity="center"
                            android:textSize="15dp"
                            android:textStyle="bold"
                    />
                    <Button
                            android:id="@+id/btMaunen"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:layout_gravity="center"
                            android:background="@color/colorWhite"
                    />
                </LinearLayout>

                <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                >
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Màu chữ"
                            android:textAlignment="center"
                            android:gravity="center"
                            android:layout_gravity="center"
                            android:textSize="15dp"
                            android:textStyle="bold"
                    />
                    <Button
                            android:id="@+id/btMauchu"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:layout_gravity="center"
                            android:background="@color/colorBlack"
                    />
                </LinearLayout>
            </LinearLayout>

            <EditText
                    android:id="@+id/etltNote"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1.5"
                    android:layout_marginRight="15dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="0dp"
                    android:layout_marginBottom="0dp"
                    android:background="@drawable/shape"
                    android:hint="Nội dung ghi chú..."
                    android:paddingTop="5dp"
                    android:paddingLeft="10dp"
                    android:gravity="top"
            />
        </LinearLayout>

        <LinearLayout
                android:id="@+id/layout1_1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_weight="1.6"
                android:layout_marginBottom="0dp"
                android:layout_marginTop="0dp"
        >
            <Button
                    android:id="@+id/btConfirm"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginLeft="0dp"
                    android:text="Thêm"
                    android:textAlignment="center"
                    android:textStyle="bold"
            />

            <Button
                    android:id="@+id/btCancel"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginRight="0dp"
                    android:text="Huỷ bỏ"
                    android:textAlignment="center"
                    android:textStyle="bold"
            />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>