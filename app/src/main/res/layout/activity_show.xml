<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.thienpham.time_remider.ShowActivity">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        tools:layout_constraintTop_creator="1" tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1" app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent" tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent" app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="70dp"
            android:paddingRight="70dp"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="503dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">

            <Button
                    android:text="Button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/button" android:layout_weight="0.5"/>
            <Button
                android:id="@+id/btMoc"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:text="Mốc" />

            <Button
                android:id="@+id/btLichtrinh"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:text="Lịch trình" />
        </LinearLayout>
        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lịch"
                android:layout_marginTop="51dp"
                android:id="@+id/btCal"
        />
    </RelativeLayout>

</RelativeLayout>
